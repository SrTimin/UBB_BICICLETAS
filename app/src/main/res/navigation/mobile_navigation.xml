<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ubbbicicletas.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <action
        android:id="@+id/action_global_qr_scanner"
        app:destination="@id/qr_scanner" />

    <activity
        android:id="@+id/qr_scanner"
        android:name="com.example.ubbbicicletas.QRScannerActivity"
        android:label="@string/title_qr" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.ubbbicicletas.ui.notifications.NotificationsFragment"
        android:label="@string/title_Registro"
        tools:layout="@layout/fragment_notifications" />
</navigation>